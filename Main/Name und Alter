#definition der Variabeln name und age
name = "Vorname"  #Name als String, deshalb in ""
age = 21         #Alter als Integer, deshalb ohne ""

#Berechnung des Alters in Tagen
ageDays = age*365

#Ausgabe des Namens mit Begrüßung und des Alters in Tagen
print("Hallo", name, ", du bist", ageDays, "Tage alt.")